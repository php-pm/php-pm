    "suggest": {
        "php-pm/httpkernel-adapter": "HttpKernel adapter for Symfony and Laravel frameworks",
        "php-pm/zend-adapter": "Zend application framework adapter",
        "php-pm/psr7-adapter": "PSR-7 adapter",
